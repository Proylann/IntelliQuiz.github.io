<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#FAF4F4"
    android:backgroundTint="#FDFDFD"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/blue_custard"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:paddingBottom="24dp"
        android:text="CHOOSE SUBJECT"
        android:textSize="40sp" />

    <GridLayout
        android:layout_width="345dp"
        android:layout_height="631dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/scienceButton"
                android:layout_width="163dp"
                android:layout_height="121dp"
                android:contentDescription="Science"
                android:foreground="@drawable/ic_science"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="SCIENCE"
                android:fontFamily="@font/blue_custard"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/geographyButton"
                android:layout_width="161dp"
                android:layout_height="121dp"
                android:contentDescription="Geography"
                android:foreground="@drawable/ic_geography"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="GEOGRAPHY"
                android:fontFamily="@font/blue_custard"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/historyButton"
                android:layout_width="163dp"
                android:layout_height="121dp"
                android:contentDescription="Philippine History"
                android:foreground="@drawable/ic_history"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="PHILIPPINE HISTORY"
                android:fontFamily="@font/blue_custard"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mathButton"
                android:layout_width="161dp"
                android:layout_height="121dp"
                android:contentDescription="Math"
                android:foreground="@drawable/ic_math"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="MATHEMATICS"
                android:fontFamily="@font/blue_custard"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="148dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/englishBtn"
                android:layout_width="161dp"
                android:layout_height="121dp"
                android:contentDescription="Math"
                android:foreground="@drawable/ic_english"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="ENGLISH"
                android:fontFamily="@font/blue_custard"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/random"
                android:layout_width="161dp"
                android:layout_height="121dp"
                android:contentDescription="Random Questions"
                android:foreground="@drawable/ic_random"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="RANDOM QUESTIONS"
                android:fontFamily="@font/blue_custard"

                />
        </LinearLayout>


    </GridLayout>
</LinearLayout>
